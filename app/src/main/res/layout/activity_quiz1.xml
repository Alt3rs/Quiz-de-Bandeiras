<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="410dp"
            android:layout_height="43dp"
            android:background="#74ADF4"
            android:gravity="center"
            android:text="Que país é esse ?"
            android:textColor="#050505"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/brasil" />

        <RadioGroup
            android:id="@+id/rdgQuiz"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rdbIraque"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iraque"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <RadioButton
                android:id="@+id/rdbBrasil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brasil" />

            <RadioButton
                android:id="@+id/rdbGranada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Granada" />

            <RadioButton
                android:id="@+id/rdbGuiana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guiana" />

            <Button
                android:id="@+id/btnResponder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:onClick="responder"
                android:text="@string/btnResponder" />
        </RadioGroup>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>