<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#74ADF4"
            android:gravity="center"
            android:text="Que país é esse ?"
            android:textColor="#090909"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cuba" />

        <RadioGroup
            android:id="@+id/rdgQuiz7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rdbChile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chile" />

            <RadioButton
                android:id="@+id/rdbCuba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuba" />

            <RadioButton
                android:id="@+id/rdbBrunei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brunei" />

            <RadioButton
                android:id="@+id/rdbHonduras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Honduras" />

            <Button
                android:id="@+id/btnResponder7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:onClick="responder7"
                android:text="@string/btnResponder" />
        </RadioGroup>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>