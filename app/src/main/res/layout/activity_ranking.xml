<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ranking">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ranking"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acertos:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtSoma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnTelaPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="telaPrincipal"
            android:text="Tela Principal" />

        <Button
            android:id="@+id/btnResponderNovamente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="reponderNovamente"
            android:text="Responder Novamente" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>