<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#74ADF4"
            android:gravity="center"
            android:text="Que país é esse ?"
            android:textColor="#0C0C0C"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bulgaria" />

        <RadioGroup
            android:id="@+id/rdgQuiz5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rdbNoruega"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Noruega" />

            <RadioButton
                android:id="@+id/rdbVietna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vietnã" />

            <RadioButton
                android:id="@+id/rdbBulgaria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bulgária" />

            <RadioButton
                android:id="@+id/rdbEspanha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Espanha" />

            <Button
                android:id="@+id/btnResponder5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:onClick="responder5"
                android:text="@string/btnResponder" />
        </RadioGroup>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>