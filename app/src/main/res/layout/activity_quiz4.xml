<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#74ADF4"
            android:gravity="center"
            android:text="Que país é esse ?"
            android:textColor="#070707"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/canada" />

        <RadioGroup
            android:id="@+id/rdgQuiz4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rdbFilipinas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filipinas" />

            <RadioButton
                android:id="@+id/rdbJamaica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jamaica" />

            <RadioButton
                android:id="@+id/rdbMexico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="México" />

            <RadioButton
                android:id="@+id/rdbCanada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Canadá" />

            <Button
                android:id="@+id/btnResponder4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:onClick="responder4"
                android:text="@string/btnResponder" />
        </RadioGroup>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>